!!! 5
%html( lang="en-US" )
  %head
    
    = stylesheet_link_tag :all
    = javascript_include_tag "jquery-1.4.4.min", "jquery-ui-1.8.12.min", "jrails", "fancygrid"
    = csrf_meta_tag
    %meta( http-equiv="Content-Type" content="text/html; charset=utf-8" )
    
    /[if lt IE 9]
      :javascript
        document.createElement("nav" );
        document.createElement("header" );
        document.createElement("footer" );
        document.createElement("section" );
        document.createElement("aside" );
        document.createElement("article" );
      
    %title 
      Demo
      
  %body
    %header#page_header
      %h1
        DevCon Demo
      %nav
        %ul
          %li
            = link_to "Roles", roles_path
          %li
            = link_to "Users", users_path
          %li
            = link_to "Blogs", blogs_path
            
    %section#page_section
      = yield
      
    %footer#page_footer
      You can find this demonstration project on github at
      = link_to "https://github.com/giniedp/devcon", "https://github.com/giniedp/devcon"
    
